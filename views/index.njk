<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currency Write </title>
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;500;700&Roboto:wght@300&display=swap"
      rel="stylesheet"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-maskmoney/3.0.2/jquery.maskMoney.min.js"></script>
    <link href="/index.css" rel="stylesheet" />
  </head>

  <body>
    <header>
      <div class="header-content">
        <div class="header-title">
          <h1><a href="/">Currency Write</a></h1>
        </div>
      </div>
    </header>

    <div class="container">
      <form method="GET" action="/result">
        <label for="value">Valor (R$):</label>
        <input
          type="text"
          name="value"
          id="value"
          placeholder="0,00"
          required
        /><br />
        <button class="convert">
          Por extenso
        </button>
      </form>
    </div>
    <script>
      $(function() {
  $('#value').maskMoney({ decimal: ',', thousands: ' ', precision: 2 });

})
    </script>
  </body>
</html>
 